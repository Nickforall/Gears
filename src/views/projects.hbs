{{#*inline "page"}}
    <h1>Lists projects</h1>
    <table class="table">
        <thead class="thead-default">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each projects as |p|~}}
                    <tr>
                        <th scope="row">{{p.name}}</th>
                        <td>
                            {{p.description}}
                        </td>
                        <td>
                            <a role="button" class="btn btn-primary btn-sm"
                               href="/projects/{{p.id}}">
                                Go &raquo;
                            </a>
                        </td>
                    </tr>
            {{/each ~}}
        </tbody>
    </table>
{{/inline}}
{{~> (parent)~}}
