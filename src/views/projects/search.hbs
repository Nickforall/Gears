{{#*inline "page"}}
    <div class="row ml-1 mr-1">
        <h1>
            Search project
        </h1>
        <form class="form-inline ml-auto" id="search-form" action="/projects/search/" method="get">
            <div class="form-group">
                <input type="search" id="search-input" class="form-control mx-sm-1" placeholder="search" value="{{query}}">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </div>
    <table class="table">
        <thead class="thead-default">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {{#each projects as |p|~}}
                <tr>
                    <th scope="row">{{p.name}}</th>
                    <td>
                        {{p.description}}
                    </td>
                    <td>
                        <a role="button" class="btn btn-primary btn-sm"
                           href="/projects/{{p.id}}">
                            Go &raquo;
                        </a>
                    </td>
                </tr>
            {{else}}
                <h2 class="text-muted">
                    No projects found for query '{{query}}'
                </h2>
            {{/each ~}}
        </tbody>
    </table>
{{/inline}}
{{~> (parent)~}}
